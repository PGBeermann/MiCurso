<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.example.micurso.app.NuevoCurso">

    <TextView
        android:id="@+id/datos"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#00F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Datos del Curso"
        />
   <TextView
       android:id="@+id/web"
       android:layout_marginTop="20dp"
       android:layout_below="@+id/datos"
       android:textSize="30sp"
       android:textStyle="bold"
       android:textColor="#D00"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Sitio Web del curso:"
       />

    <EditText
        android:id="@+id/webtxt"
        android:layout_below="@+id/web"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#DDDDFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/abrev"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/webtxt"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#D00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n:"
        />
    <EditText
        android:id="@+id/abrevtxt"
        android:layout_below="@+id/abrev"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#DDDDFF"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn1"
        android:layout_below="@+id/abrevtxt"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar curso"
        android:onClick="Ejecutar"
        />

</RelativeLayout>
